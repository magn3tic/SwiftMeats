.filter-dropdown-wrap {
    width: 30%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 auto;
}

#filter-wrap {
    background: $gold;
    padding: 40px 0;
    text-align: center;
    position: relative;
    // overflow: hidden;
    .btn-primary {
        background-color: $blue;
        // &:hover {
        //     background-color: $red;
        // }
    }
    h2 {
        color: $blue;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }
    p {
        color: $blue;
        font-family: Arial, Helvetica, sans-serif;
    }

    ul.product-filters {
        list-style: none;
        width: 80%;
        padding: 0;
        margin: 30px auto;
        display: flex;
        justify-content: space-evenly;
        flex-wrap: wrap;
        li {
