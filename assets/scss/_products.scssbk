#up-your-game {
    padding-bottom: unset;
    padding-top: 2rem;
    background: $blue;

    .col-12 {
        border-bottom: 2px solid #516896;
    }

    .sm-product-cook-tabs {
        margin-top: 0;

        .gn-item {
            height: auto;
            width: auto;
            display: block;
            font-size: 1.65rem;
            background: $blue;
            border-radius: 0;
            border: 0;
            padding: 1rem;
            color: #516896;
            margin: 0;
            opacity: 0.7;

            &:hover {
                color: #fff;
            }

            &:before {
                content: '';
                display: block;
                position: absolute;
                bottom: -3px; 
                left: 0;
                width: 100%;
                height: 4px;
                background: $gold;
                opacity: 0;
            }

            &.active {
                opacity: 1;
                color: #fff;
                &:before {
                    opacity: 1;
                }
            }

            &:after {
                display: none;
            }
        }
    }
}

