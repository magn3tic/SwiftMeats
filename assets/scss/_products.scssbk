}

.pi-arrow>img {
    transition: all 0.2s ease-in-out;
}

.pi-top.active .pi-arrow>img {
    // background: transparent url('/wp-content/themes/swift/assets/img/products/arrow-up.png') no-repeat;
    transform: rotate(-180deg);
    
