    }
}

.pi-top {
    position: relative;
    cursor: pointer;
    transition: all 0.3s ease-in-out;

    &:hover {
        opacity: .9;
    }
    .title-wrap {
        width: 100%;
        position: absolute;
        overflow: hidden;
        bottom: 0;
        left: 0;
        border-radius: 0 0 4px 4px;
        overflow: clip;

        .title {
            font-family: $bourton;
            color: #fff;
            text-align: center; 
            position: relative;
            padding: 1.5rem 0.5rem 1.325rem;
            font-size: 1.5rem;
            line-height: 1;
            font-weight: 300;
            background: #28334a !important;
        }
    }

    &--shim {
        height: 0;
        position: relative;
        padding-bottom: 100%;
        background-color: $gray-light;
        border-radius: 4px;
        overflow: clip;
    }

    &--shim-bg {
        position: absolute;
        top: 0;
        bottom: 4rem;
        left: 10%;
        width: 80%;
        background-size: contain;
        background-position: center center;
        background-repeat: no-repeat;
    }
}

.sm-products--view-more {
    text-align: center;
    padding: 1rem 0;

    button {
        border: 0;
        appearance: none;
        background: none;
        line-height: 1;
        position: relative;
        display: inline-block;
        padding: 1rem 1.5rem;
        color: $blue;
        font-size: 1.5rem;

        svg {
            position: absolute;
            top: 100%;
            left: 50%;
            width: 30px;
            margin-left: -15px;
        }
    }
}


.pi-bottom {
    background: #ebebeb;
    // display: none;
    padding: 0;
    height: 0;
    overflow: hidden;
    transition: all 0.5s ease-in-out;
