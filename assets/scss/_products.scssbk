#products-hero {
    background-size: cover;
    background-position: center center;
    position: relative;
    height: 350px;
    display: flex;
    align-items: center;

    &:after {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.33);
        mix-blend-mode: multiply;
    }
  
    h1 {
        position: relative;
        z-index: 3;
        color: #fff;
        font-size: 4rem;
        line-height: .5;
        font-family: $ts4;
        text-transform: uppercase;
        text-align: center;
        line-height: 1.3;
        span {
            display: block;
            font-size: 1.65rem;
            font-family: $bourton;
        }
    }
}

@media (min-width: 769px) {
    #products-hero {
        height: 450px;

        h1 {
            font-size: 5.5rem;
            span {
                font-size: 2.2rem;
            }
        }
    }
}

